  <div class="row">
    <% @items.each do |item| %>
    <form action="/update_item/<%= item.id %>">
      <input class="hidden" name="list_id" id="list_id" value="<%= @list.id %>">
      <div class="col-sm-offset-1 col-sm-1 col-md-offset-2 col-md-1">
        <div class="form-group">
          <input type="number" id="quantity" name="quantity" class="form-control" placeholder="0" step="any" min="0" value="<%= item.quantity %>">
        </div>
      </div>
      <div class="col-sm-2 col-md-2">
        <div class="form-group">
          <input type="text" id="unit" name="unit" class="form-control" placeholder="" value="<%= item.unit %>">
        </div>
      </div>
      <div class="col-sm-5 col-md-3">
        <div class="form-group">
          <input type="text" id="item" name="item" class="form-control" placeholder="bacon, eggs, toilet paper, etc." value="<%= item.name %>">
        </div>
      </div>
      <div class="col-sm-2 col-md-2">
        <div class="form-group">
          <div class="btn-group btn-group-right">
            <button type="submit" class="btn btn-default">
              <i class="fa fa-refresh"></i></button>
              <a href="/delete_item/<%= item.id %>" class="btn btn-default">
                <i class="fa fa-trash-o"></i></a>
          </div>
        </div>
      </div>
    </form>
    <% end %>
</div>

