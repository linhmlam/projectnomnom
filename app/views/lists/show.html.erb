<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="page-header">
      <h1><%= @list.name %></h1>
    </div>
  </div>
</div>

<form action="/create_item">
  <input class="hidden" name="list_id" id="list_id" value="<%= @list.id %>">
  <div class="row">
      <div class="col-sm-offset-1 col-sm-1 col-md-offset-2 col-md-1">
          <div class="form-group">
        <label for="recipe_quantity">Quantity</label>
        <input type="number" id="quantity" name="quantity" class="form-control" placeholder="0" step="any" min="0">
      </div>
    </div>
      <div class="col-sm-2 col-md-2">
          <div class="form-group">
        <label for="unit">Measurement</label>
        <input type="text" id="unit" name="unit" class="form-control" placeholder="cups, tbsp, etc.">
      </div>
    </div>
      <div class="col-sm-6 col-md-4">
          <div class="form-group">
        <label for="item">Item</label>
        <input type="text" id="item" name="item" class="form-control" placeholder="bacon, eggs, toilet paper, etc.">
      </div>
    </div>
      <div class="col-sm-1 col-md-1">
          <div class="form-group">
        <div class="add_icon">
          <label for="submit" class="btn"><i class="fa fa-plus fa-2x"></i></label>
          <input id="submit" type="submit" value="add_item" class="hidden">
        </div>
      </div>
    </div>
  </div>
</form>

<div>&nbsp;</div>

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <h3>Shopping List</h3>
  </div>
</div>

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
  <ul class="list-group">
    <% @list.items.each do |item| %>
      <li class="list-group-item">
        <div class="checkbox">
          <label>
            <input type="checkbox" value=""><%= item.quantity %> <%= item.unit %> <%= item.item %>
            <div class="right">
              <a href="/delete_item/<%= item.id %>">
                <i class="fa fa-times fa-1x"></i>
              </a>
            </div>
          </label>
        </div>
      </li>
      <% end %>
    </ul>
  </div>
</div>
