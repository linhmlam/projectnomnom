<div class="row">
  <div class="col-sm-offset-1 col-sm-2 col-md-offset-2 col-md-2">
    <div class="header_button_left">
      <a href="/lists"><i class="fa fa-chevron-left"></i>  Back</a>
    </div>
  </div>
  <div class="col-sm-8 col-md-6">
    <div class="header_button_right">
      <a href="/lists/<%= @list.id %>/edit">Edit</a> |
      <a href="/delete_list/<%= @list.id %>">Delete</a>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="page-header">
      <h1><%= @list.name %></h1>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
  <ul class="list-group">
    <% @list.items.each do |item| %>
      <li class="list-group-item">
        <div class="checkbox">
          <label>
            <input class="check" type="checkbox" value=""><span class="item"><%= item.quantity %> <%= item.unit %> <%= item.name %></span>
          </label>
        </div>
      </li>
      <% end %>
    </ul>
  </div>
</div>

<script type='text/javascript'>
  $('input.check').change(function () {
          $(this).siblings('.item').toggleClass('strike', this.checked);
          $(this).closest('li').find('.delete_item').toggleClass('hidden', !this.checked);
      });
</script>
