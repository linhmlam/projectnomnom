<!DOCTYPE html>
<html>
<head>
  <title>Projectnomnom</title>
  <%= stylesheet_link_tag    'application', 'bootstrap', 'my_styles', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'bootstrap', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

<!-- Adds Font Awesome -->
  <link rel="stylesheet" type="text/css" href="http://maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css">


  <script src="http://code.jquery.com/jquery-1.11.0.min.js"></script>
  <script src="http://code.jquery.com/jquery-migrate-1.2.1.min.js"></script>

</head>
<body>

 <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
    <div class="container-fluid">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#example1">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <!-- What do these span classes do? -->
        </button>
        <a class="navbar-brand" href="#"><i class="fa fa-shopping-cart"></i></a>
      </div>

      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="example1">
       <ul class="nav navbar-nav">
         <li class="active"><a href="/lists/new">Create List</a></li>
         <li><a href="/lists">View Lists</a></li>
         <li><a href="/recipes">Browse Recipes</a></li>
         <li><a href="/recipes/new">Add Recipe</a></li>
      </ul>

      <ul class="nav navbar-nav navbar-right">
        <% if current_user.present? %>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">Signed in as <%= current_user.name %><i class="fa fa-cog fa-lg"></i> <span class="caret"></span></a>
          <ul class="dropdown-menu" role="menu">
            <li><a href="/users/edit">Edit Profile</a></li>
            <li class="divider"></li>
            <li><a href="/users/sign_out" data-method="delete">Sign Out</a></li>
        <% else %>
          <li><a href="/users/sign_up">Sign up</a></li>
          <li><a href="/users/sign_in">Sign in</a></li>
        <% end %>
      </ul>

    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>

<body>
  <div class="container">

<%= yield %>

<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>

</div>
</body>
</html>
