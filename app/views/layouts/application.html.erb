<!DOCTYPE html>
<html>
<head>
  <title>Project Nom Nom</title>
  <%= stylesheet_link_tag    'application', 'bootstrap', 'my_styles', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'bootstrap', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

<!-- Adds Font Awesome -->
  <link rel="stylesheet" type="text/css" href="http://maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css">


  <script src="http://code.jquery.com/jquery-1.11.0.min.js"></script>
  <script src="http://code.jquery.com/jquery-migrate-1.2.1.min.js"></script>

  <link rel="stylesheet" href="//code.jquery.com/ui/1.11.2/themes/smoothness/jquery-ui.css">
  <script src="//code.jquery.com/jquery-1.10.2.js"></script>
  <script src="//code.jquery.com/ui/1.11.2/jquery-ui.js"></script>

  <script type='text/javascript'>
    $(function() {
      var availableUnits = [
        "cup",
        "gallon",
        "liter",
        "milliliter",
        "ounce",
        "pint",
        "quart",
        "tablespoon",
        "teaspoon",
        "pinch"
      ];
      $( "#unit" ).autocomplete({
        source: availableUnits
      });
    });
  </script>


</head>
<body>

 <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
    <div class="container-fluid">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#example1">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <!-- What do these span classes do? -->
        </button>
        <a class="navbar-brand" href="/lists"><i class="fa fa-shopping-cart"></i></a>
      </div>

      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="example1">
       <ul class="nav navbar-nav">
         <li><a href="/lists/new">Create List</a></li>
         <li><a href="/lists">View Lists</a></li>
         <li><a href="/recipes">Browse Recipes</a></li>
         <li><a href="/recipes/new">Add Recipe</a></li>
      </ul>

      <ul class="nav navbar-nav navbar-right">
        <% if current_user.present? %>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">Signed in as <%= current_user.name %> <span class="caret"></span></a>
          <ul class="dropdown-menu" role="menu">
            <li><a href="/users/edit">Edit Profile</a></li>
            <li class="divider"></li>
            <li><a href="/users/sign_out" data-method="delete">Sign Out</a></li>
        <% else %>
          <li><a href="/users/sign_up">Sign up</a></li>
          <li><a href="/users/sign_in">Sign in</a></li>
        <% end %>
      </ul>

    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>

<body>
  <div class="container">

  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
  <% if notice %>
    <div class="alert alert-success alert-dismissible" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
        <%= notice %>
      </div>
  <% end %>
  <!-- <p class="alert"><%#= alert %></p> -->
  </div>

<%= yield %>

<div>&nbsp;</div>



</div>
</body>
</html>
