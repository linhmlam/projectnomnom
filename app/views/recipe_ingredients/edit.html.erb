<!-- Validation failure messages -->

<% if @recipe_ingredient.errors.any? %>
  <% @recipe_ingredient.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>


<!-- Simple full-width example -->

<div class="page-header">
  <h1>Edit Recipe Ingredient #<%= @recipe_ingredient.id %></h1>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_recipe_ingredient/<%= @recipe_ingredient.id %>" class="form-horizontal">
      <!-- Label and input for recipe_id -->
      <div class="form-group">
        <label for="recipe_id" class="col-sm-2 control-label">
          Recipe
        </label>
        <div class="col-sm-10">
          <input type="text" id="recipe_id" name="recipe_id" placeholder="Recipe" class="form-control" value="<%= @recipe_ingredient.recipe_id %>">
        </div>
      </div>

      <!-- Label and input for quantity -->
      <div class="form-group">
        <label for="quantity" class="col-sm-2 control-label">
          Quantity
        </label>
        <div class="col-sm-10">
          <input type="text" id="quantity" name="quantity" placeholder="Quantity" class="form-control" value="<%= @recipe_ingredient.quantity %>">
        </div>
      </div>

      <!-- Label and input for unit -->
      <div class="form-group">
        <label for="unit" class="col-sm-2 control-label">
          Unit
        </label>
        <div class="col-sm-10">
          <input type="text" id="unit" name="unit" placeholder="Unit" class="form-control" value="<%= @recipe_ingredient.unit %>">
        </div>
      </div>

      <!-- Label and input for ingredient -->
      <div class="form-group">
        <label for="ingredient" class="col-sm-2 control-label">
          Ingredient
        </label>
        <div class="col-sm-10">
          <input type="text" id="ingredient" name="ingredient" placeholder="Ingredient" class="form-control" value="<%= @recipe_ingredient.ingredient %>">
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <input type="submit" value="Update Recipe Ingredient" class="btn btn-warning">
          or
          <a href="/recipe_ingredients/<%= @recipe_ingredient.id %>">Cancel</a>
        </div>
      </div>
    </form>
  </div>
</div>

