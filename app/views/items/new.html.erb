<!-- Validation failure messages -->

<% if @item.errors.any? %>
  <% @item.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="row">
  <div class="col-sm-offset-1 col-sm-6 col-md-offset-2 col-md-5">
    <div class="page-header">
      <h1><%= @item.list.name %></h1>
    </div>
  </div>
  <div class="col-sm-4 col-md-3">
    <div class="header_buttons">
       <a href="/recipes">Add Recipe</a> |
       <a href="/lists/<%= @item.list_id %>/edit">Edit List</a> |
       <a href="/delete_list/<%= @item.list_id %>">Delete List</a>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-sm-offset-1 col-sm-6 col-md-offset-2 col-md-5">
    <h3>Add an item to your list:</h3>
  </div>
</div>

<form action="/create_item">
  <input class="hidden" name="list_id" id="list_id" value="<%= @item.list_id %>">
<div class="row">
  <div class="col-sm-offset-1 col-sm-1 col-md-offset-2 col-md-1">
    <div class="form-group">
    <label for="recipe_quantity">Quantity</label>
    <input type="number" id="quantity" name="quantity" class="form-control" placeholder="0" step="any" min="0">
  </div>
  </div>
  <div class="col-sm-2 col-md-2">
  <div class="form-group">
    <label for="unit">Measurement</label>
    <input type="text" id="unit" name="unit" class="form-control" placeholder="cups, tbsp, etc.">
  </div>
  </div>
  <div class="col-sm-6 col-md-4">
  <div class="form-group">
    <label for="item">Item</label>
    <input type="text" id="item" name="item" class="form-control" placeholder="bacon, eggs, toilet paper, etc.">
  </div>
  </div>
  <div class="col-sm-1 col-md-1">
    <div class="add_icon">
    <label for="submit" class="btn btn-default"><i class="fa fa-plus fa-2x"></i></label>
    <input id="submit" type="submit" value="add_item" class="hidden">
    </div>
  </div>
</div>
</form>

<div>&nbsp;</div>

<div class="row">
  <div class="col-sm-offset-1 col-sm-6 col-md-offset-2 col-md-5">
    <a href="/lists/<%= @item.list_id %>">
      <button type="button" class="btn btn-primary">View List</button>
    </a>
  </div>
</div>
