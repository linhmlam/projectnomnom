<!-- Validation failure messages -->

<% if @list_recipe.errors.any? %>
  <% @list_recipe.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>


<!-- Simple full-width example -->

<div class="page-header">
  <h1>Edit List Recipe #<%= @list_recipe.id %></h1>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_list_recipe/<%= @list_recipe.id %>" class="form-horizontal">
      <!-- Label and input for list_id -->
      <div class="form-group">
        <label for="list_id" class="col-sm-2 control-label">
          List
        </label>
        <div class="col-sm-10">
          <input type="text" id="list_id" name="list_id" placeholder="List" class="form-control" value="<%= @list_recipe.list_id %>">
        </div>
      </div>

      <!-- Label and input for recipe_id -->
      <div class="form-group">
        <label for="recipe_id" class="col-sm-2 control-label">
          Recipe
        </label>
        <div class="col-sm-10">
          <input type="text" id="recipe_id" name="recipe_id" placeholder="Recipe" class="form-control" value="<%= @list_recipe.recipe_id %>">
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <input type="submit" value="Update List Recipe" class="btn btn-warning">
          or
          <a href="/list_recipes/<%= @list_recipe.id %>">Cancel</a>
        </div>
      </div>
    </form>
  </div>
</div>

<!-- End simple full-width example-->

