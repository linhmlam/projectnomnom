<form action="/create_recipe_ingredient_from_recipe_edit">
  <input class="hidden" name="recipe_id" id="recipe_id" value="<%= @recipe.id %>">
  <div class="row">
    <div class="col-sm-offset-1 col-sm-1 col-md-offset-2 col-md-1">
      <div class="form-group">
        <input type="number" id="quantity" name="quantity" class="form-control" placeholder="0" step="any" min="0">
      </div>
    </div>
    <div class="col-sm-2 col-md-2">
      <div class="form-group">
        <input type="text" id="unit" name="unit" class="form-control" placeholder="cups, tbsp, etc.">
      </div>
    </div>
    <div class="col-sm-5 col-md-3">
      <div class="form-group">
        <input type="text" id="ingredient" name="ingredient" class="form-control" placeholder="">
      </div>
    </div>
    <div class="col-sm-1 col-md-1">
      <div class="form-group">
          <label for="submit" class="btn btn-default"><i class="fa fa-plus"></i></label>
          <input id="submit" type="submit" value="add_ingredient" class="hidden">
      </div>
    </div>
  </div>
</form>
