<%= form_for @recipe do |f| %>
<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="row">
     <div class="form-group">
      <%= f.label :name, :class => "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :name, :class => "form-control" %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="form-group">
      <%= f.label :photo, "Image URL", :class=> "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :photo, :class => "form-control" %>
      </div>
    </div>
  </div>
</div>
</div>

<div class="row">
  <div class="col-sm-offset-1 col-sm-2 col-md-offset-2 col-md-2">
    <%= f.label :quantity, "Quantity" %>
  </div>
  <div class="col-sm-2 col-md-2">
    <%= f.label :unit, "Measurement" %>
  </div>
  <div class="col-sm-6 col-md-4">
      <%= f.label :ingredient, "Ingredient" %>
  </div>
</div>

<%= f.fields_for :recipe_ingredients do |builder| %>
<div class="row">
  <div class="col-sm-offset-1 col-sm-2 col-md-offset-2 col-md-2">
    <%= builder.number_field :quantity, :class => "form-control", :step => "any", :min => "0" %>
  </div>
  <div class="col-sm-2 col-md-2">
    <%= builder.text_field :unit, :class=> "form-control", :placeholder => "cups, tablespoons, etc." %>
  </div>
  <div class="col-sm-6 col-md-4">
    <%= builder.text_field :ingredient, :class=> "form-control" %>
    <%= builder.check_box :_destroy %>
    <%= builder.label :_destroy, "Remove Ingredient" %>
  </div>
</div>
<% end %>

<div>&nbsp;</div>

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <%= f.submit "Submit", :class => "btn btn-success" %> or <a href="/recipes">Cancel</a>
  </div>
</div>

<% end %>
