<!-- Validation failure messages -->

<% if @recipe.errors.any? %>
<% @recipe.errors.full_messages.each do |message| %>
<div class="alert alert-dismissable alert-danger">
  <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
  <%= message %>
</div>
<% end %>
<% end %>

<!-- Simple full-width example-->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="page-header">
      <h1>Add Recipe</h1>
    </div>
  </div>
</div>

<form action="/create_recipe" class="form-horizontal">
  <input class="hidden" name="user_id" value="<%= current_user %>">
  <div class="row">
    <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
      <!-- Label and input for name -->
      <div class="form-group">
         <label for="name" class="col-sm-2 control-label">
          Recipe Name
        </label>
        <div class="col-sm-10">
        <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="<%= @recipe.name %>">
        </div>
      </div>

      <div class="form-group">
         <label for="photo" class="col-sm-2 control-label">
          Image URL
        </label>
        <div class="col-sm-10">
        <input type="text" id="photo" name="photo" placeholder="http://" class="form-control" value="<%= @recipe.photo %>">
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-offset-2 col-sm-8 col-md-offset-2 col-md-8">
      <div class="form-group">
        <input type="submit" value="Create Recipe" class="btn btn-success">
        or
        <a href="/lists">Cancel</a>
      </div>
    </div>
  </div>
</form>
