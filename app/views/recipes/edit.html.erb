<!-- Validation failure messages -->

<% if @recipe.errors.any? %>
<% @recipe.errors.full_messages.each do |message| %>
<div class="alert alert-dismissable alert-danger">
  <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
  <%= message %>
</div>
<% end %>
<% end %>


<!-- Simple full-width example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="page-header">
      <h1>Edit <%= @recipe.name %></h1>
    </div>
  </div>
</div>

  <form action="/update_recipe/<%= @recipe.id %>">
  <div class="row">
    <div class="form-group">
      <div class="col-sm-offset-1 col-sm-1 col-md-offset-2 col-md-1">
        <label for="name">
          Recipe Name
        </label>
      </div>
      <div class="col-sm-6 col-md-5">
        <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="<%= @recipe.name %>">
      </div>
      <div class="col-sm-2 col-md-2">
        <div class="form-group">
          <div class="btn-group btn-group-right">
            <button type="submit" class="btn btn-default">
              <i class="fa fa-refresh"></i>
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="form-group">
      <div class="col-sm-offset-1 col-sm-1 col-md-offset-2 col-md-1">
        <label for="photo">
          Image URL
        </label>
      </div>
      <div class="col-sm-7 col-md-5">
        <input type="text" id="photo" name="photo" placeholder="" class="form-control" value="<%= @recipe.photo %>">
      </div>
      <div class="col-sm-2 col-md-2">
        <div class="form-group">
          <div class="btn-group btn-group-right">
            <button type="submit" class="btn btn-default">
              <i class="fa fa-refresh"></i>
            </button>
          </div>
        </div>
      </div>
    </div>
  </form>
</div>

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <h3>Ingredients</h3>
  </div>
</div>

<div class="row">
  <div class="col-sm-offset-1 col-sm-1 col-md-offset-2 col-md-1">
    <label for="quantity">Quantity</label>
  </div>
  <div class="col-sm-2 col-md-2">
    <label for="unit">Measurement</label>
  </div>
  <div class="col-sm-6 col-md-4">
    <label for="ingredient">Ingredient</label>
  </div>
  <div class="col-sm-1 col-md-1">
    &nbsp;
  </div>
</div>

<%= render 'add_recipe_ingredient' %>
<%= render 'edit_recipe_ingredients' %>

<div>&nbsp;</div>

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <a href="/recipes/<%= @recipe.id %>" class="btn btn-primary">
    Done!</a> or
    <a href="/delete_recipe/<%= @recipe.id %>">
      Delete recipe</a>
  </div>
</div>

