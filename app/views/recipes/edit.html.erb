<!-- Validation failure messages -->

<% if @recipe.errors.any? %>
  <% @recipe.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>


<!-- Simple full-width example -->

<div class="page-header">
  <h1>Edit Recipe #<%= @recipe.id %></h1>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_recipe/<%= @recipe.id %>" class="form-horizontal">
      <!-- Label and input for name -->
      <div class="form-group">
        <label for="name" class="col-sm-2 control-label">
          Name
        </label>
        <div class="col-sm-10">
          <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="<%= @recipe.name %>">
        </div>
      </div>

      <!-- Label and input for photo -->
      <div class="form-group">
        <label for="photo" class="col-sm-2 control-label">
          Photo
        </label>
        <div class="col-sm-10">
          <input type="text" id="photo" name="photo" placeholder="Photo" class="form-control" value="<%= @recipe.photo %>">
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <input type="submit" value="Update Recipe" class="btn btn-warning">
          or
          <a href="/recipes/<%= @recipe.id %>">Cancel</a>
        </div>
      </div>
    </form>
  </div>
</div>

<!-- End simple full-width example-->

