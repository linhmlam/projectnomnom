<!-- Simple full-width example-->

<div class="page-header">
  <h1><%= @recipe.name %></h1>
</div>

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
      <img src="<%= @recipe.photo %>">

      <h3>Ingredients</h3>
         <ul>
          <% @recipe.recipe_ingredients.each do |recipe_ingredient| %>
          <li><%= recipe_ingredient.quantity %> <%= recipe_ingredient.unit %> <%= recipe_ingredient.ingredient %></li>

          <% end %>
          </ul>
        <div class="btn-group">
          <a href="/recipes" class="btn btn-primary">
            <i class="fa fa-chevron-left"></i>
          </a>

          <a href="/recipes/<%= @recipe.id %>/edit" class="btn btn-warning">
            <i class="fa fa-edit"></i>
          </a>

          <a href="/delete_recipe/<%= @recipe.id %>" class="btn btn-danger">
            <i class="fa fa-trash-o"></i>
          </a>
        </div>


  </div>
</div>

<!-- End simple full-width example-->
