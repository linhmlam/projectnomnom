<!-- Simple full-width example-->
<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="page-header">
      <h1><%= @recipe.name %></h1>
    </div>
  </div>
</div>

<form action="/create_recipe_ingredient">
  <input class="hidden" name="recipe_id" id="recipe_id" value="<%= @recipe.id %>">
  <div class="row">
    <div class="col-sm-offset-1 col-sm-1 col-md-offset-2 col-md-1">
      <div class="form-group">
        <label for="quantity">Quantity</label>
        <input type="number" id="quantity" name="quantity" class="form-control" placeholder="0" step="any" min="0">
      </div>
    </div>
    <div class="col-sm-2 col-md-2">
      <div class="form-group">
        <label for="unit">Measurement</label>
        <input type="text" id="unit" name="unit" class="form-control" placeholder="cups, tbsp, etc.">
      </div>
    </div>
    <div class="col-sm-6 col-md-4">
      <div class="form-group">
        <label for="item">Ingredient</label>
        <input type="text" id="ingredient" name="ingredient" class="form-control" placeholder="bacon, eggs, toilet paper, etc.">
      </div>
    </div>
    <div class="col-sm-1 col-md-1">
      <div class="form-group">
        <div class="add_icon">
          <label for="submit" class="btn"><i class="fa fa-plus fa-2x"></i></label>
          <input id="submit" type="submit" value="add_recipe_ingredient" class="hidden">
        </div>
      </div>
    </div>
  </div>
</form>


<div class="row">
  <div class="col-sm-offset-1 col-sm-4 col-md-offset-2 col-md-2">
 <img src="<%= @recipe.photo %>" width="100%">
  </div>
  <div class="col-sm-6 col-md-6">
    <h3 class="ingredient_header">Ingredients</h3>
    <ul>
      <% @recipe.recipe_ingredients.each do |recipe_ingredient| %>
      <li><%= recipe_ingredient.quantity %> <%= recipe_ingredient.unit %> <%= recipe_ingredient.ingredient %></li>

      <% end %>
    </ul>
        <div class="btn-group">
      <a href="/recipes" class="btn btn-primary">
        <i class="fa fa-chevron-left"></i>
      </a>

      <a href="/recipes/<%= @recipe.id %>/edit" class="btn btn-warning">
        <i class="fa fa-edit"></i>
      </a>

      <a href="/delete_recipe/<%= @recipe.id %>" class="btn btn-danger">
        <i class="fa fa-trash-o"></i>
      </a>
    </div>
  </div>


  </div>
</div>
<!-- End simple full-width example-->
